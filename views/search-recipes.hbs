<section class="search-recipes-section-1">

<form class="search-recipes-form" method="post" action="/search-recipes">

    <label>Recipe:</label>
    <input name="query"/>
    <label>Cuisine:</label>
    <input name="cuisine" placeholder="E.g. Italian, Chinese"/>
    <label>Diet:</label>
    <input name="diet" placeholder="E.g. Vegan"/>
    <label>Number of Recipes:</label>
    <input name="number" placeholder="Between 1 and 100"/>

    <button class="search-recipes-button" type="submit">Get Recipes!</button>

</form>

</section>